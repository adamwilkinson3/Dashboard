<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class ="d-flex flex-column" style="height: 100vh;">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div class="container-fluid">
                    <a class="navbar-brand" style="user-select: none;">Dashboard</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
@*                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="CreateCustomer">Create Customer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="CreateAddress">Create Address</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Customer_Address">Customer Address</a>
                            </li>
                        </ul>*@
                    </div>
                </div>
            </nav>
        </header>
        <div class="d-flex flex-grow-1">
        @*SIDEBAR*@
            <div class="sticky-top d-flex flex-column" id="accordion" style="width: 240px; background-color: #1e1d6e;">
                @*CUSTOMER*@
                <div class="card tab1" style="border-radius: 0;">
                    <div class="card-header p-0">
                        <a class="btn p-3" data-bs-toggle="collapse" href="#collapseOne" draggable="false" style="width: 100%; height: 100%;">
                            Customers
                        </a>
                    </div>
                    <div id="collapseOne" class="collapse" data-bs-parent="#accordion">
                        <div class="card-body d-flex flex-column p-0">
                            <a class="btn btn-list" asp-controller="Customer" asp-action="GetAllCustomers">All Customers</a>
                            <a class="btn btn-list" asp-controller="Customer" asp-action="Customer_Address">Add Customer</a>
                            @*<a class="btn btn-list" asp-controller="Customer" asp-action="CreateCustomer">Add Customer</a>*@
                        </div>
                    </div>
                </div>
                @*BUSINESS*@
                <div class="card tab2" style="border-radius: 0;">
                    <div class="card-header p-0">
                        <a class="collapsed btn p-3" data-bs-toggle="collapse" href="#collapseTwo" draggable="false" style="width: 100%; height: 100%;">
                            Staff
                        </a>
                    </div>
                    <div id="collapseTwo" class="collapse" data-bs-parent="#accordion">
                        <div class="card-body d-flex flex-column p-0">
                            <a class="btn btn-list" asp-controller="Business" asp-action="GetStaff">Get All Staff</a>
                            <a class="btn btn-list" asp-controller="Business" asp-action="CreateStaff">Add Staff</a>
                        </div>
                    </div>
                </div>
                @*MOVIES*@
      @*          <div class="card tab3" style="border-radius: 0;">
                    <div class="card-header">
                        <a class="collapsed btn" data-bs-toggle="collapse" href="#collapseThree" draggable="false">
                            Sales
                        </a>
                    </div>
                    <div id="collapseThree" class="collapse" data-bs-parent="#accordion">
                        <div class="card-body d-flex flex-column p-0">
                            <a class="btn btn-list">All Customers</a>
                            <a class="btn btn-list">Add Customer</a>
                        </div>
                    </div>
                </div>*@
                
            </div>
            @*END SIDEBAR*@
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
